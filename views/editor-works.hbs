<main>
    <div class='container ' style='width: 80%;'>
        <h2 class="mx-5">Danh sách các bài đã duyệt<h2>
                {{#each works}}
                <div class='card rounded-4 shadow-lg m-2 border-success border-top-0'
                    style='width: 100%;background-color: lightgrey;'>
                    <div class='row g-2'>
                        <div class='col-2'>
                            <img src={{tinyImagePath}} class='card-img mw-100 rounded-circle'
                                style="aspect-ratio: 1 / 1">
                        </div>
                        <div class='col-8'>
                            <div class='card-body'>
                                <h3 class='card-title'>{{title}}</h3>
                                <p style='font-size: 13px;'>{{abstract}}</p>
                            </div>
                        </div>

                        {{#if (equal NewsStatus.status "approved")}}
                        <div class='col-2 d-flex flex-column justify-content-center'>
                            <div class=" rounded-5 m-auto p-2" style="background-color: lightgreen; font-size: 15px"><i
                                    class="bi bi-check2-circle rounded-circle"
                                    style="background-color: greenyellow;"></i>Duyệt</div>
                        </div>
                        {{else}}
                        <div class='col-2 d-flex flex-column justify-content-center'>
                            <div class=" rounded-5 m-auto p-2" style="background-color: lightcoral; font-size: 15px"><i
                                    class="bi bi-file-earmark-medical"></i>Từ chối</div>
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
                <nav class="user-news-details__comment-pagination-container" aria-label="Page navigation">
                    {{{ createPagination pagination paginationClass='pagination' leftText='Trước' rightText='Sau'}}}
                </nav>
    </div>


</main>
