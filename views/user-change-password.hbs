<main class="container">
    <div class="row">
        <div class="col-5">
            {{> user-account-nav-pane }}
        </div>
        <div class="col-7">
            <div class="user-account__function-title">
                <h4>Đổi mật khẩu</h4>
            </div>
            <form class="user-account__change-password-form" action="/account/change-password" method="post">
                <div class="mb-3">
                    <label for="current-pwd" class="form-label">Mật khẩu hiện tại</label>
                    <input type="password" class="form-control" name="current-pwd"
                        id="current-pwd" aria-describedby="helpId" placeholder="" required>
                </div>
                <div class="mb-3">
                    <label for="new-pwd" class="form-label">Mật khẩu mới</label>
                    <input type="password" class="form-control" name="new-pwd" id="new-pwd"
                        aria-describedby="emailHelpId" placeholder="" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                        title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
                        required>
                </div>
                <div class="mb-3">
                    <label for="new-pwd-confirm" class="form-label">Nhập lại mật khẩu mới</label>
                    <input type="password" class="form-control" name="new-pwd-confirm" id="new-pwd-confirm"
                        aria-describedby="helpId" placeholder="" required>
                </div>
                <div style="display: flex; justify-content: flex-end; width: 100%;">
                    <button class="btn btn-primary" type="submit">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</main>