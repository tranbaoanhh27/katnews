<main>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                {{>writer-information-nav}}
            </div>
            {{#with writer}}
            <div class="col-md-9 col-sm-6">
                <div class="container" onclick="handleOnclickBody()">
                    <form action="/writer/editInformation" method="post">
                            
                            <img src="/images/writer-logo.jpeg" style="width: 25%;height: 25%;" class="mx-auto d-block">
                        <hr>
                        <div class="mx-auto d-flex text-center shadow">
                            <label for="" class="form-label">Tên tác giả</label>

                            <input type="text" class="d-inline mx-auto " readonly id="nameInput" value="{{fullName}}"
                                name="fullName" />
                            <i class="btn bi bi-pencil-fill mx-5" id="nameInputBtn"></i>
                        </div>
                        <hr>

                        <div class="mx-auto d-flex text-center shadow">
                            <label for="" class="form-label">Bút danh</label>
                            <input type="text" class="d-inline mx-auto " readonly id="aliasInput" value="{{pseudonym}}"
                                name="pseudonym" />
                            <i class="btn bi bi-pencil-fill mx-5" id="aliasInputBtn"></i>
                        </div>

                        <hr>

                        <button type="submit" class="btn btn-primary mt-3">Thay đổi</button>

                    </form>
                </div>
            </div>
            {{/with}}
        </div>
    </div>


</main>
