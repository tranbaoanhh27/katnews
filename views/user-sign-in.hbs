<main>
    <div class="user-login-card">
        <form action="/auth/login" method="post">
            <h2>Đăng nhập</h2>
            <div class="mb-4 mt-5">
                <label for="login-email" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" id="login-email" aria-describedby="emailHelpId"
                    placeholder="address@domain.com" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
            </div>
            <div class="mb-4">
                <label for="login-password" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" name="password" id="login-password" placeholder="**********"
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                    title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
                    required>
            </div>
            <div class="user-login-card__save-account-and-reset-password">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="keepSignedIn" id="keepSignedIn">
                    <label class="form-check-label" for="keepSignedIn">
                        Tự động đăng nhập
                    </label>
                </div>
                <a href="/auth/forgot-password">Quên mật khẩu?</a>
            </div>
            {{#if loginMessage }}
            <div class="alert alert-warning mt-3">
                {{{loginMessage}}}
            </div>
            {{/if}}
            <div class="user-login-card__submit-and-link-to-sign-up">
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
                <div class="user-login-card__link-to-sign-up">
                    <small>Chưa có tài khoản?</small>
                    <br>
                    <a href="/auth/register">Đăng ký</a>
                </div>
            </div>
        </form>
    </div>
    <p class="user-login-method-seperator">Hoặc</p>
    <div class="user-login-quick-login">
        <div class="user-login-quick-login__method">
            <img src="/images/google-logo.png" alt="">
            <div>
                <small>Đăng nhập nhanh với</small>
                <h4>Google</h4>
            </div>
        </div>
        <div class="user-login-quick-login__method">
            <img src="/images/facebook-logo.png" alt="">
            <div>
                <small>Đăng nhập nhanh với</small>
                <h4>Facebook</h4>
            </div>
        </div>
    </div>
</main>
